@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">            
            <a href="login">Login</a>
        </div>

        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <ErrorHandler />
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>
@code {
    private void OnError(Exception ex)
    {
        // Handle the error (e.g., log it)
    }
}
